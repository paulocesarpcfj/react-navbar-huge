body,
html
    font-size 62.5%
    margin 0
    font-family 'HUGEAvantGardeBold'
    overflow-x hidden

*
    box-sizing content-box
    outline none

a,
a:hover,
a:active,
a:focus
    text-decoration none
    color inherit
    font-weight normal

ul
    list-style none
    padding 0
    margin 0

section
    font-size 1.8rem

p
    margin-top 0